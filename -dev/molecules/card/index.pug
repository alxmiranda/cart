mixin card(data)
    div.card
        each item in data.items
            div.product
                fingure.product__thumb
                    img.img(src=item.src alt=item.alt)
                article.product__description
                    h1.h1.product__name= item.nameProduct
                    h2.h2.product__price= item.priceProduct
                    p.p= item.descriptionProduct
                div.product__actions
                    label= "Quantidade"
                    input(type="text" class="product__quantity")
                    p.product__feedback
                    button.product__button-add= item.labelBtn