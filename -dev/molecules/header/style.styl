.header
    width 100%
    height 43px
    margin 0 0 50px 0
    padding 0 50px
    box-sizing border-box
    display flex
    align-items center
    justify-content space-between
    background #888

.header__logotipo
    p
        margin 0
        padding 0
        font-family 'Roboto'
        font-size 20px
        line-height 0
        text-transform uppercase
        color #fff

.header__notifications
    height 100%
    padding 0 15px
    display flex
    box-sizing border-box
    align-items center
    background #333
    transition background .3s linear
    cursor pointer
    p
        color #fff

    &:hover
        background #fff
        transition background .3s linear
        p
            color #333